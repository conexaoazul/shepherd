<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_blue_shepherd_step_tree" model="ir.ui.view">
        <field name="name">blue.shepherd.step.tree</field>
        <field name="model">blue.shepherd.step</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="tour_id"/>
                <field name="element"/>
                <field name="position"/>
            </tree>
        </field>
    </record>

    <record id="view_blue_shepherd_step_form" model="ir.ui.view">
        <field name="name">blue.shepherd.step.form</field>
        <field name="model">blue.shepherd.step</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Step Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tour_id"/>
                            <field name="sequence"/>
                            <field name="title"/>
                        </group>
                        <group>
                            <field name="element"/>
                            <field name="position"/>
                            <field name="scrollTo"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content" name="content">
                            <field name="text" widget="html"/>
                        </page>
                        <page string="Buttons" name="buttons">
                            <group>
                                <group>
                                    <field name="show_cancel_link"/>
                                    <field name="cancel_text"/>
                                </group>
                                <group>
                                    <field name="next_text"/>
                                    <field name="back_text"/>
                                </group>
                            </group>
                        </page>
                        <page string="Advanced" name="advanced">
                            <group>
                                <field name="modalOverlayOpeningPadding"/>
                                <field name="extra_options"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_blue_shepherd_step_search" model="ir.ui.view">
        <field name="name">blue.shepherd.step.search</field>
        <field name="model">blue.shepherd.step</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="tour_id"/>
                <field name="element"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tour" name="group_tour" context="{'group_by': 'tour_id'}"/>
                    <filter string="PosiÃ§Ã£o" name="group_position" context="{'group_by': 'position'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>